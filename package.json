{
  "name": "@ffw/randstad-shared-components",
  "version": "0.1.0",
  "private": true,
  "main": "build/index.js",
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/eslint-parser": "^7.13.10",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-react": "^7.12.13",
    "@testing-library/react": "^11.2.5",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.5.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^3.1.0",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-styleguidist": "^11.1.7",
    "webpack": "^5.24.4",
    "webpack-cli": "^4.5.0"
  },
  "scripts": {
    "build": "rm -rf build && webpack --mode production",
    "docs:dev": "styleguidist server",
    "docs:build": "styleguidist build && cp ./src/docs-lib/autogenerated-icons.svg ./styleguide/build",
    "docs:deploy": "netlify deploy -p --auth ykXsQT6afSBt0Fy_qU4eNwNyM4wUBDSDOmPn5xfVfY8",
    "fetch-svg": "node ./src/docs-lib/fetch-svg.js",
    "test": "jest",
    "lint": "eslint .",
    "fmt": "prettier --write ."
  },
  "postinstall": "yarn fetch-svg",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json, md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
