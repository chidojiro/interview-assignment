{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@hoc/*": ["src/hoc/*"],
      "@hooks/*": ["src/hooks/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "~": ["./*"]
    },
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
