{
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "build"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "typeRoots": ["./src/types"]
}
